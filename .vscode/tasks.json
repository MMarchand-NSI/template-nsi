            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "choixInstall",
            "type": "pickString",
            "description": "Quel composant installer ?",
            "options": [
                "msys2",
                "elm",
                "rust",
                "nasm",
                "qemu",
                "postgresql",
                "graphviz"
            ],
            "default": "rust"
        },
        {
            "id": "postgresAction",
            "type": "pickString",
            "description": "Quelle action PostgreSQL ?",
            "options": [
                "postgres-start",
                "postgres-stop"
            ],
            "default": "postgres-start"
        },
        {
            "id": "openSiteProf",
            "type": "command",
            "command": "simpleBrowser.show",
            "args": [
                "https://mmarchand-nsi.github.io"
            ]
        }
    ]
