            },
            "type": "process",
            "command": "uv",
            "args": [
                "run",
                "python",
                "${workspaceFolder}/.vscode/cleusb.py",
                "sauvegarde"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "üîë ‚ü∂ üíª Import depuis USB",
            "icon": {
                "id": "cloud-download",
                "color": "terminal.ansiMagenta"
