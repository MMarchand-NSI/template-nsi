            },
            "type": "process",
            "command": "uv",
            "args": [
                "sync"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "üõ†Ô∏è Setup Environment NSI",
            "icon": {
                "id": "settings",
                "color": "terminal.ansiYellow"
            },
            "type": "process",
            "command": "uv",
            "args": [
                "run",
                "python",
                "${workspaceFolder}/.vscode/setup.py"
            ],
            "dependsOn": [
                "uv sync"
            ],
            "dependsOrder": "sequence",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
                "focus": false,
                "close": false
            },
            "problemMatcher": []
        },
        {
            "label": "üß© Installer Composant",
            "icon": {
                "id": "cloud-download",
                "color": "terminal.ansiGreen"
            },
            "type": "process",
            "command": "uv",
            "args": [
                "run",
                "python",
                "${workspaceFolder}/.vscode/install_wrapper.py",
                "${input:choixInstall}"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "üêò PostgreSQL",
            "icon": {
                "id": "database",
                "color": "terminal.ansiBlue"
            },
            "type": "process",
            "command": "uv",
            "args": [
                "run",
                "python",
                "${workspaceFolder}/.vscode/install_wrapper.py",
                "${input:postgresAction}"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": false,
                "clear": true
            },
            "problemMatcher": []
        },
