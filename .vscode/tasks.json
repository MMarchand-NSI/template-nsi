        },
        {
            "label": "üåê Site du prof",
            "icon": {
                "id": "globe",
                "color": "terminal.ansiCyan"
            },
            "command": "${input:openSiteProf}",
            "problemMatcher": []
        },
        {
            "label": "üîó Configurer mon d√©p√¥t personnel",
            "icon": {
                "id": "repo",
                "color": "terminal.ansiGreen"
            },
            "type": "process",
            "command": "uv",
            "args": [
                "run",
                "python",
                "${workspaceFolder}/.vscode/init_repo.py"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true,
                "clear": true
            },
            "problemMatcher": []
